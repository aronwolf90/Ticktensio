FROM ruby:2.4.2-alpine3.6

RUN apk update
RUN apk add git
RUN apk add g++
RUN apk add nodejs
RUN apk add tzdata
RUN apk add ruby-dev
RUN apk add make
RUN apk add postgresql-dev
RUN apk add postgresql-client
RUN apk add openssh-client
RUN apk add bash

COPY Gemfile Gemfile.lock ./

RUN gem install bundler
RUN bundle install
